<% layout('layouts/admin') %>

<div class="container mb-5 pb-5">
  <h1 class="mb-3">Редактировать <%= item.name %></h1>
  <a href="/admin/about" class="mb-2 btn btn-primary">Весь контент</a>
  <div class="row mb-4">
    <div class="col">
      <form class="w-50 mx-auto" method="POST" action="/admin/about/edit/<%= item.slug %>" enctype="multipart/form-data">
        <% if(item.type === 'text') { %>
        <div class="form-group mb-4">
          <label for="description">Содержимое</label>
          <textarea type="text" rows="14" class="form-control" name="description" id="description" placeholder="Введите содержимое" required><%= item.value %></textarea>
        </div>
        <% } else if(item.type === 'image') {%>
          <div class="form-group mb-4">
            <h3 class="card-title">Текущее фото</h3>
            <img width="400" src="/uploads/about/<%= item.value %>" alt="<%= item.value %>">
          </div>
          <div class="form-group mb-4">
            <label for="aboutImageUrl" class="form-label">Загрузите изображение</label>
            <input class="form-control" type="file" id="aboutImageUrl" name="aboutImageUrl" required>
          </div>
        <% } %>
