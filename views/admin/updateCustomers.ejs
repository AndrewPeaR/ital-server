<% layout('layouts/admin') %>

<div class="container mb-5 pb-5">
  <h1 class="mb-3">Редактировать заказчика</h1>
  <a href="/admin/customers" class="mb-2 btn btn-primary">Все заказчики</a>
  <div class="row mb-4">
    <div class="col">
      <form class="w-50 mx-auto" method="POST" action="/admin/customers/edit/<%= customer.id %>" enctype="multipart/form-data">
        <div class="form-group mb-4">
          <label for="name">Название</label>
          <input type="text" value="<%= customer.name %>" class="form-control" id="name" name="name" aria-describedby="name" placeholder="Введите название">
        </div>
        <div class="form-group mb-4">
          <label for="officialSite">Официальный сайт</label>
          <input type="text" value="<%= customer.officialSite %>" class="form-control" id="officialSite" name="officialSite" aria-describedby="officialSite" placeholder="Введите ссылку на официальный сайт">
        </div>
        <% if(customer.imageUrl) { %>
          <p class="card-text">Текущее изображение:</p>
          <img width="300" src="/uploads/customers/<%= customer.imageUrl %>" alt="<%= customer.imageUrl %>">  
        <% } %>
        <div class="form-group mb-4">
          <label for="customersImageUrl" class="form-label">Загрузите изображение</label>
          <input class="form-control" type="file" id="customersImageUrl" name="customersImageUrl">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
      </form>
    </div>
  </div>
</div>