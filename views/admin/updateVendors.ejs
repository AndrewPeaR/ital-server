<% layout('layouts/admin') %>

<div class="container mb-5 pb-5">
  <h1 class="mb-3">Изменить вендора</h1>
  <a href="/admin/vendors" class="mb-2 btn btn-primary">Все вендоры</a>
  <div class="row mb-4">
    <div class="col">
      <form class="w-50 mx-auto" method="POST" action="/admin/vendors/update/<%= vendors.id %>" enctype="multipart/form-data">
        <div class="form-group mb-4">
          <label for="name">Название</label>
          <input type="text" value="<%= vendors.name %>" class="form-control" id="name" name="name" aria-describedby="name" placeholder="Введите название">
        </div>
        <div class="form-group mb-4">
          <label for="description">Описание</label>
          <textarea type="text" rows="4" class="form-control" name="description" id="description" placeholder="Введите описание"><%= vendors.description %></textarea>
        </div>
        <div class="form-group mb-4">
          <label for="officialSite">Официальный сайт</label>
          <input type="text" value="<%= vendors.officialSite %>" class="form-control" id="officialSite" name="officialSite" aria-describedby="officialSite" placeholder="Введите ссылку на официальный сайт">
        </div>
        <div class="form-group mb-4">
          <label for="CompanyTag">Тэги вендора (перечислисте через запятую)</label>
          <input type="text" value="<%= vendors.CompanyTag %>" class="form-control" id="CompanyTag" name="CompanyTag" aria-describedby="CompanyTag" placeholder="Введите тэги">
        </div>
        <% if(vendors.imageUrl) { %>
          <p class="card-text">Текущее изображение:</p>
          <img width="300" src="/uploads/vendors/<%= vendors.imageUrl %>" alt="<%= vendors.imageUrl %>">  
        <% } %>
        <div class="form-group mb-4">
          <label for="vendorsImageUrl" class="form-label">Загрузите изображение</label>
          <input class="form-control" type="file" id="vendorsImageUrl" name="vendorsImageUrl">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
      </form>
    </div>
  </div>
</div>